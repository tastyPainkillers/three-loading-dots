using System;
using System.Threading;

namespace ConsoleApp2
{
	class Program
	{
		static void Main(string[] args)
		{
			while (!(Console.KeyAvailable && Console.ReadKey(true).Key == ConsoleKey.Enter))
			{
				Console.Write("\rPress Enter to continue.  ");
				Thread.Sleep(1000);
				Console.Write("\rPress Enter to continue . ");
				Thread.Sleep(1000);
				Console.Write("\rPress Enter to continue  .");
				Thread.Sleep(1000);
			}
		}
	}
}
